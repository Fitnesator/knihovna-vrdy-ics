name: Build ICS (Knihovna Vrdy)

on:
  schedule:
    # POZOR: GitHub Actions používá UTC.
    # 05:05 UTC ≈ 07:05 v Praze (CEST); v zimě 06:05 (CET).
    - cron: "5 5 * * *"
  workflow_dispatch: {}

permissions:
  contents: write

jobs:
  build-ics:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Generate ICS
        run: |
          mkdir -p docs
          python vrdy_knihovna_to_ics.py --out docs/vrdy_knihovna.ics

      - name: Commit & push if changed
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          if ! git diff --quiet; then
            git add docs/vrdy_knihovna.ics
            git commit -m "Auto-update ICS ($(date -u +'%Y-%m-%d %H:%M:%S') UTC)"
            git push
          else
            echo "No changes in ICS."
          fi
